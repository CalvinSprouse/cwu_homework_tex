% a package containing custom commands for math/physics homework

% augmented matrices
\makeatletter
\renewcommand*\env@matrix[1][*\c@MaxMatrixCols c]{
  \hskip -\arraycolsep
  \let\@ifnextchar\new@ifnextchar
  \array{#1}}
\makeatother

% special sets
\newcommand{\reals}{\mathbb{R}}
\newcommand{\ints}{\mathbb{Z}}
\newcommand{\zero}{\vec{\mathbf{0}}}
\newcommand{\field}{\mathbb{F}}
\newcommand{\ip}[1]{ \left\langle #1 \right\rangle}

% easy matrices
\newcommand{\matr}[1]{ \left[ \begin{matrix} #1 \end{matrix} \right] }

% eqdef
\newcommand{\eqdef}{\stackrel{\mathclap{\tiny\mbox{def}}}{=}}

% types span kind of like \sin
\newcommand{\vspan}{\textrm{span}}

% script-r
\def\rcurs{{\mbox{$\resizebox{.16in}{.08in}{\includegraphics{.config/.script_r/ScriptR.pdf}}$}}}
\def\brcurs{{\mbox{$\resizebox{.16in}{.08in}{\includegraphics{.config/.script_r/BoldR.pdf}}$}}}
\def\hrcurs{{\mbox{$\hat \brcurs$}}}

% euler-lagrange (mathcal L)
\newcommand{\el}{\mathcal{L}}

% command to insert a space middle bracket with sizing
\newcommand{\midpipe}{\;\middle|\,}

% command to make a given
\newcommand{\given}[2]{\left( #1 \;\middle|\, #2 \right)}

% command to make a integral d
\newcommand{\intd}[1]{\phantom{\cdot}\text{d}#1}

% command to make a bounded integral
% inputs: #1 is lower bound, #2 is upper bound,
% #3 is integrand, #4 is variable to integrate w/rspct to
\newcommand{\bint}[4]{\int_{#1}^{#2}{#3\intd{#4}}}

% define raven
\def\rraven{{\mbox{$\resizebox{.32in}{.32in}{\includegraphics{.config/raven.png}}$}}}
\def\lraven{{\mbox{$\resizebox{-.32in}{.32in}{\includegraphics{.config/raven.png}}$}}}

% commands to end a proof
% end a proof with "lets give up and drink"
\usepackage{oldgerm}
\newcommand{\drinkproof}{\begin{center}\lraven\quad\textfrak{Lass uns aufgeben und trinken.}\;\;\,\rraven\end{center}}


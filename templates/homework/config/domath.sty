% fix the mod command to make mod properly spaced
\renewcommand\mod{\;\text{mod}\;}

% create a command to properly represent vectored primed quantities
\newcommand{\pvec}[2]{\vec{[1]}_[2]^{\,\prime}}

% create a command to print p-value
\newcommand{\pval}{\text{$p$-val}}

% command to print scientific notation
\newcommand{\expnumber}[2]{{#1}\mathrm{e}{#2}}

% command to print " is irrational" and " is rationa"
\newcommand{\nirat}{\,\text{is irrational}}
\newcommand{\irat}{\,\text{is rational}}

% command to print a not divides character
\newcommand{\ndiv}{\makebox[1.1pt][l]{/}|}


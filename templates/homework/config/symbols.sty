% Modified \replicateStain command to call \cofeAm with random offsets
% sixth input is the page since the initial stain
% use \def\myvariable{value} to define the original positions
\newcommand{\replicateStain}[6]{%
    % Generate random offsets
    \pgfmathsetmacro{\randomxoffset}{rand*25}
    \pgfmathsetmacro{\randomyoffset}{rand*25}
    % Call the original \cofeAm with random offsets
    \cofeAm{#1*(0.7)^(#6-1)}{#2}{#3}{#4+\randomxoffset}{#5+\randomyoffset}%
}
